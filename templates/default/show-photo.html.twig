{% extends "base.html.twig" %}

{% block body %}
    <div id="container">
        <div id="photo-container">
            {% if photo is defined %}
                <img src="{{ asset(photo.photoName, 'photographs') }}" class="invisible">
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('contextmenu', function(event) {

            event.preventDefault();
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: #060f1c;
            color: white;
            font-family: source sans pro, helvetica neue, Arial, sans-serif;
        }
        
        img {
            max-width: 90%;
            max-height: 90%;
            border: white 10px solid;
        }     
        
        #container {
            position: absolute;
        }
        
        #photo-container {
            position: relative;
        }
        
        body.noscroll {
            position: fixed;
            overflow-y: scroll;
            width: 100%;
        }
    </style>
{% endblock %}